    "background": {
        "service_worker": "background.js"
    },

    //Extension commands :: https://developer.chrome.com/docs/extensions/reference/commands/
    "commands": {},

    //Extension permissions :: https://developer.chrome.com/docs/extensions/mv3/declare_permissions/
    "permissions": []
}